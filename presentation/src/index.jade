      section
        h2 REACTIVITY
        h3.bullet State - DOM Mapping
        pre
          code.language-javascript.
            var object = {
              message: 'Hello world!'
            }
            new Vue({
              el: '#example',
              data: object
            })
        pre
          code.language-html.
            &lt;div id="example"&gt;
              {{ message }}
            &lt;/div&gt;

      section
        h2 COMPONENTS
        h3.bullet Reusability
        pre
          code.language-javascript.
            var Hello = Vue.extend({
              template: '&lt;div&gt;{{ message }}&lt;/div&gt;',
              props: ['myName'],
              data () {
                return {
                  message: 'Hello ' + this.myName
                }
              }
            })
            // Register it with the tag &lt;hello&gt;
            Vue.component('hello', Hello)
        pre
          code.language-html.
            &lt;hello my-name="James"&gt;&lt;/hello&gt;

      section
        h2 MODULARITY
        h3.bullet Global-scope avoiding
        pre
          code.language-javascript.
            // Hello.js
            export default {
              template: '&lt;div&gt;{{ message }}&lt;/div&gt;',
              props: ['myName'],
              data () {
                return {
                  message: 'Hello ' + this.myName
                }
              }
            }

      section
        h2 MODULARITY
        h3 Global-scope avoiding
        pre
          code.language-javascript.
            // main.js
            import Hello from './Hello'
            new Vue({
              el: '#example',
              data: object,
              components: { Hello }
            })
        pre
          code.language-html.
            &lt;div id="example"&gt;
              &lt;hello my-name="James"&gt;&lt;/hello&gt;
            &lt;/div&gt;

      section
        h2 MODULARITY
        h3.bullet Encapsulating
        pre
          code.language-html.
            &lt;!-- Hello.vue --&gt;
            &lt;style lang="scss" scoped&gt;
            .message {
              color: red
            }
            &lt;/style&gt;

            &lt;template&gt;
              &lt;div class="message"&gt;
                {{ message }}
                Bye, &lt;strong&gt;{{ myName }}&lt;/strong&gt;
              &lt;/div&gt;
            &lt;/template&gt;

            &lt;script&gt;
            export default {
              props: ['myName'],
              data () {
                return {
                  message: 'Hello ' + this.myName
                }
              }
            }
            &lt;/script&gt;

