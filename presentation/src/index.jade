      section
        h2 REACTIVITY
        h3.bullet State - DOM Mapping
        pre
          code.language-javascript.
            var object = {
              message: 'Hello world!'
            }
            new Vue({
              el: '#example',
              data: object
            })
        pre
          code.language-html.
            &lt;div id="example">
              {{ message }}
            &lt;/div>
      section
        h2 COMPONENTS
        h3.bullet Reusability
        pre
          code.language-javascript.
            var Hello = Vue.extend({
              template: '&lt;div>{{ message }}&lt;/div>',
              props: ['myName'],
              data () {
                return {
                  message: 'Hello ' + this.myName
                }
              }
            })
            // Register it with the tag &lt;hello>
            Vue.component('hello', Hello)
        pre
          code.language-html.
            &lt;hello my-name="James">&lt;/hello>

      section
        h2 MODULARITY
        h3.bullet Global-scope avoiding
        pre
          code.language-javascript.
            // Hello.js
            export default {
              template: '&lt;div>{{ message }}&lt;/div>',
              props: ['myName'],
              data () {
                return {
                  message: 'Hello ' + this.myName
                }
              }
            }
      section
        h2 MODULARITY
        h3 Global-scope avoiding
        pre
          code.language-javascript.
            // main.js
            import Hello from './Hello'
            new Vue({
              el: '#example',
              data: object,
              components: { Hello }
            })
        pre
          code.language-html.
